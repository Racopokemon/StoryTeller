.link {
	-fx-background-color: rgba(255,255,255,0.01);
	-fx-background-radius: 0;
	-fx-background-insets: 0;
}
.link:hover {
	-fx-background-color: white;
	-fx-background-radius: 2;
	-fx-background-insets: 0;
}
.link:hover {
	-fx-background-color: white;
	-fx-background-radius: 2;
	-fx-background-insets: 1;
}
.link:pressed {
	-fx-background-color: rgba(255,255,255,0.5);
	-fx-background-radius: 2;
	-fx-background-insets: 1.5;
}
.link:pressed:hover {
	-fx-background-color: white;
	-fx-background-radius: 2;
	-fx-background-insets: 2;
}

.unimportantFeature {
	-fx-text-fill: rgb(145,145,145);
	-fx-label-padding: 2,8,2,8;
	-fx-border-color: rgba(100,100,100,0.15);
	//-fx-border-insets: 0;
	-fx-border-width: 1;
	-fx-border-radius: 2;
}
.unimportantFeature:hover {
	-fx-text-fill: black;
}
.unimportantFeature:pressed {
	-fx-text-fill: rgb(160,160,160);
}
.unimportantFeature:pressed:hover {
	-fx-text-fill: rgb(160,160,160);
}


.styled-button {
	-fx-background-color: transparent;
	-fx-background-radius: 0;
	-fx-background-insets: 0;
	-fx-border-color: rgba(255,255,255,0.23);
	//-fx-border-insets: 0;
	-fx-border-width: 2;
	-fx-border-radius: 2;
}
.styled-button:hover {
	-fx-background-color: white;
	-fx-background-radius: 2;
	-fx-background-insets: 0;
	-fx-border-color: null;
}
.styled-button:pressed:hover {
	-fx-background-color: white;
	-fx-background-radius: 2;
	-fx-background-insets: 1;
	-fx-border-color: null;
}
.styled-button:pressed {
	-fx-background-color: rgba(255,255,255,0.35);
	-fx-background-radius: 2;
	-fx-background-insets: 0.5;
	-fx-border-color: null;
}

.element-text-field {
	-fx-background-color: rgba(255,255,255,0.9);
	-fx-background-radius: 2;
	-fx-background-insets: 0;
	-fx-prompt-text-fill: rgb(160,160,160);
}
.element-text-field:hover {
	-fx-background-color: white;
}

.element-text-area .scroll-pane {
	-fx-background-color: transparent;
}
.element-text-area .scroll-pane .viewport {
	-fx-background-color: transparent;
}
.element-text-area .scroll-pane .content {
	-fx-background-color: transparent;
}
.element-text-area {
	-fx-background-color: rgba(255,255,255,0.9);
	-fx-background-radius: 2;
	-fx-background-insets: 0;
}
.element-text-area:hover  {
	-fx-background-color: white;
}

.scroll-bar {
	-fx-background-color: transparent;
}
.scroll-bar .thumb {
	-fx-background-color: rgba(150,150,150,0.4);
}
.scroll-bar .thumb:hover {
	-fx-background-color: rgba(150,150,150,0.7);
}
.scroll-bar .thumb:pressed {
	-fx-background-color: rgba(150,150,150,0.7);
	-fx-background-insets: 3;
}
.scroll-bar .decrement-button:hover {
	-fx-background-color: transparent;
}
.scroll-bar .increment-button:hover {
	-fx-background-color: transparent;
}
.scroll-bar .decrement-button .decrement-arrow {
	-fx-background-color: rgba(150,150,150,0.4);
}
.scroll-bar .increment-button .increment-arrow {
	-fx-background-color: rgba(150,150,150,0.4);
}
.scroll-bar .increment-button .increment-arrow:hover {
	-fx-background-color: rgba(150,150,150,1);
}
.scroll-bar .decrement-button .decrement-arrow:hover {
	-fx-background-color: rgba(150,150,150,1);
}